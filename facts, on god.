MATH


        x = input("enter: ")
    x = int(x)
    if x % 2 == 0 and x < 0:
        print("Negative Even")
    elif x % 2 != 0 and x < 0:
        print("Negative Odd")
    elif x == 0:
        print("Zero")
    elif x % 2 == 0 and x > 0:
        print("Positive Even")
    elif x % 2 != 0 and x > 0:
        print("Positive Odd")
        
        
        
        
